@page
@model LoginModel

@{
	ViewData["Title"] = "Log in";
}
	<!-- Wrapper -->
	<div id="wrapper">
		<!-- Form -->
		<section id="main" class="wrapper">
			<div class="inner">
			<h2>Form</h2>
			<form method="post">
				<div class="row gtr-uniform">
					<div class="col-6 col-12-xsmall">
					<input asp-for="Input.Email" class="form-control" id="demo-name" placeholder="Email address" required autofocus />
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				<div class="col-6 col-12-xsmall">
					<input asp-for="Input.Password" class="form-control" id="demo-email" placeholder="Password" required />
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>
				<div class="form-group">
					<div class="checkbox">
						<label asp-for="Input.RememberMe">
							<input asp-for="Input.RememberMe" />
							@Html.DisplayNameFor(m => m.Input.RememberMe)
						</label>
					</div>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-lg btn-success btn-block">Sign in</button>
				</div>
				</div>
			</form>

			<div class="col-12">
				<ul class="actions">
					<li><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></li>
				</ul>
				<p>
					If you don't' have an account, <a asp-area="Identity" asp-page="/Account/Register">Register here.</a>
				</p>
			</div>
			</div>
		</section>
		</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
